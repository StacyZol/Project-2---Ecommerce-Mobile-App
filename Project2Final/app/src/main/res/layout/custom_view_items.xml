<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/CustomItemView"
    app:cardElevation="3dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#FFF"
            android:layout_margin="4dp"
            android:id="@+id/ItemPhotosID"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_alignTop="@+id/ItemPhotosID"
            android:textColor="#000000"
            android:textSize="15dp"
            android:id="@+id/ItemNameID"
            android:layout_toRightOf="@+id/ItemPhotosID"
            />
        <Button
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:text="Add"
            android:background="@color/colorPrimary"
            android:layout_toRightOf="@+id/ItemNameID"
            android:layout_alignTop="@+id/ItemPhotosID"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/QuickAdd"
android:visibility="invisible"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Description..."
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="13dp"
            android:id="@+id/DescriptionsID"
            android:layout_below="@+id/ItemNameID"
            android:layout_toRightOf="@+id/ItemPhotosID"
            />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_loyalty_black_24dp"
            android:id="@+id/HeartID"
            android:layout_alignBottom="@+id/ItemPhotosID"
            android:layout_toRightOf="@+id/ItemPhotosID"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/ItemNameID"

            />
        <ImageView
            android:layout_width="32dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_loyalty_black_faded"
            android:id="@+id/HeartIDFaded"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/ItemNameID"
            android:visibility="invisible"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:id="@+id/PriceID"
            android:text="$99.99"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/ItemPhotosID"
            android:layout_toRightOf="@+id/HeartID"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/DescriptionsID"

            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:text="# of Reviews"
            android:textColor="#000"
            android:textSize="13dp"
            android:textStyle="italic|bold"
            android:layout_toRightOf="@+id/PriceID"
            android:layout_below="@+id/DescriptionsID"
            android:layout_alignBottom="@+id/ItemPhotosID"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>