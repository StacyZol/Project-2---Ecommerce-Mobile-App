<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/customNurseryView"
    app:cardElevation="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF"
            android:layout_margin="2dp"
            android:id="@+id/nurseryPhoto" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginBottom="0dp"
            android:layout_alignParentTop="true"
            android:textColor="#000000"
            android:textSize="13dp"
            android:id="@+id/nurseryName"
            android:layout_toRightOf="@+id/nurseryPhoto" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="# of Reviews"
            android:textSize="12dp"
            android:id="@+id/nurseryReviews"
            android:layout_below="@+id/nurseryName"
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@id/nurseryPhoto"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/nurseryPhoto" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:id="@+id/nurseryStars"
            android:layout_alignBottom="@+id/nurseryReviews"
            android:layout_toRightOf="@+id/nurseryReviews"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/nurseryName" />
    </RelativeLayout>
</android.support.v7.widget.CardView>