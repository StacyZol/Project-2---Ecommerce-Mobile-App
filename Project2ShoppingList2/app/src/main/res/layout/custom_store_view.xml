<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/CustomStoreView"
    app:cardElevation="8dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:padding="4dp"
            >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="#FFFFFF"
                    android:layout_margin="16dp"
                    android:id="@+id/StoreLogoPictureID"
                    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:textColor="#000000"
                android:textSize="28dp"
                android:id="@+id/StoreNameID"
                android:layout_toRightOf="@+id/StoreLogoPictureID"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="# of Reviews"
                    android:textSize="22dp"
                    android:id="@+id/NumberOfReviewsID"
                    android:layout_below="@+id/StoreNameID"
                    android:layout_marginRight="10dp"

                    android:layout_alignBottom="@id/StoreLogoPictureID"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@+id/StoreLogoPictureID"
                    />


                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:background="#FFFFFF"
                    android:id="@+id/StarsID"
                    android:layout_alignBottom="@+id/NumberOfReviewsID"
                    android:layout_toRightOf="@+id/NumberOfReviewsID"
                    android:layout_marginTop="40dp"
                   android:layout_below="@+id/StoreNameID"
                    />



        </RelativeLayout>

    </android.support.v7.widget.CardView>




