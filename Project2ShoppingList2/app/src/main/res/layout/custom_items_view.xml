<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/CustomItemView"
    app:cardElevation="8dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#000000"
            android:layout_margin="16dp"
            android:id="@+id/ItemPhotosID"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:layout_marginBottom="10dp"
            android:layout_alignParentTop="true"
            android:textColor="#000000"
            android:textSize="28dp"
            android:id="@+id/ItemNameID"
            android:layout_toRightOf="@+id/ItemPhotosID"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="More Colors"
            android:textSize="22dp"
            android:id="@+id/DescriptionsID"
            android:layout_below="@+id/ItemNameID"
            android:layout_toRightOf="@+id/ItemPhotosID"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:id="@+id/HeartID"
            android:layout_alignBottom="@+id/ItemPhotosID"
            android:layout_toRightOf="@+id/ItemPhotosID"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/ItemNameID"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:id="@+id/PriceID"
            android:text="# of reviews"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/ItemPhotosID"
            android:layout_toRightOf="@+id/HeartID"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/DescriptionsID"

            />



    </RelativeLayout>

</android.support.v7.widget.CardView>

