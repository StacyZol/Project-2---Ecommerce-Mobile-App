<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/CustomCartItemView"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#000000"
            android:layout_margin="16dp"
            android:id="@+id/ItemPhotosID"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:layout_marginBottom="10dp"
            android:layout_alignTop="@+id/ItemPhotosID"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/ItemNameID"
            android:layout_toRightOf="@+id/ItemPhotosID"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Price"
            android:textSize="16dp"
            android:id="@+id/ItemPriceID"
            android:layout_below="@+id/ItemNameID"
            android:layout_toRightOf="@+id/ItemPhotosID"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>