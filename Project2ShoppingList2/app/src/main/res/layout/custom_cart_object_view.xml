<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:id="@+id/CustomCartItemView"
    app:cardElevation="8dp"
    app:contentPadding="4dp"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap="true"
    android:foregroundGravity="center"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_margin="6dp"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#000000"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:id="@+id/ItemPhotosID"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Item Name"
            android:layout_alignTop="@+id/ItemPhotosID"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/ItemNameID"
            android:layout_toRightOf="@+id/ItemPhotosID"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/cartItemMinus"
            android:layout_below="@+id/ItemNameID"
            android:layout_toRightOf="@+id/ItemPhotosID"
            android:scaleType="centerInside"
            android:background="@drawable/ic_chevron_left_black_24dp"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:id="@+id/cartItemQuantity"
            android:layout_below="@+id/ItemNameID"
            android:layout_toRightOf="@+id/cartItemMinus"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:text="99"
            android:textColor="#000"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/cartItemsPlus"
            android:layout_toRightOf="@id/cartItemQuantity"
            android:layout_below="@id/ItemNameID"
            android:background="@drawable/ic_chevron_right_black_24dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Per Unit: "
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_below="@id/cartItemQuantity"
            android:layout_toRightOf="@id/ItemPhotosID"
            android:id="@+id/perUnit"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cartPerUnitPrice"
            android:layout_toRightOf="@id/perUnit"
            android:text="99.99"
            android:textColor="#000"
            android:layout_below="@id/cartItemMinus"
            />
        <TextView
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:text="1000.00"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@id/cartPerUnitPrice"
            android:layout_toRightOf="@id/ItemPhotosID"
            android:id="@+id/cartTotalPrice"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>